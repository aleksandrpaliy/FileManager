}

<DOCTYPE html>

<html ng-app="MenagerApp">
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>File Menager</title>
    <link rel="stylesheet" href="~/style/bootstrap.css">
    <link rel="stylesheet" href="~/style/bootstrap-theme.css">
    <link rel="stylesheet" type="text/css" href="~/style/main.css">
        <!--	<link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon">    -->
    <script type="text/javascript" src="~/Scripts/angular.js"></script>
    <script type="text/javascript" src="~/Scripts/main.js"></script>
</head>
<body>
    <div id="main" class="panel panel-body container">
        <div id="gridContainer" class="main_header" ng-controller="HeadCntr">
            <div id="header_head_main" class="panel-body row grid-row">
                <div id="style_head_file" class="col-sm-4">File<div id="style_head_maneger">Manager</div></div>
                <div id="alarm" class="col-sm-8">
                        <div id="style_head_head_manager" align="center">Текущий каталог</div>
                        <div id="this_catalog">
                            <manager r_data="{{data}}"></manager>
                        </div>
                </div>
            </div>
        </div>


        <div class="main_block" id="p" ng-controller="MainCntr">
            <table-data data="files"></table-data>

            <table class="table">
                <thead>
                    <tr>
                        <th>Less 10MB</th>
                        <th>10MB-50MB</th>
                        <th>More 50MB</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="cont in data.info_size">
                        <td class="info" value="cont.Less_10">{{cont.Less_10}}</td>
                        <td class="info">{{cont.More10_Less50}}</td>
                        <td class="info">{{cont.More50}}</td>
                    </tr>
                </tbody>
            </table>
        </div>









    </div>


</body>
</html>